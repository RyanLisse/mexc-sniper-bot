  async calculateAdaptiveThresholds(regime: {
    name: string;
    volatility: number;
    trend: string;
    sentiment: string;
  }): Promise<{
    maxPositionSize: number;
    stopLossThreshold: number;
    riskReductionFactor: number;
  }> {
    return await this.dynamicCalculations.calculateAdaptiveThresholds(regime);
