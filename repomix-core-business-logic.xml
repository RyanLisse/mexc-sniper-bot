  private getDefaultCriteria(): PatternFilterCriteria {
    return {
      minConfidence: 70,
      allowedPatternTypes: ["ready_state"],
      maxAge: 300000,
      requireCalendarConfirmation: true,
      maxRiskLevel: "medium",
      symbolBlacklist: [],
